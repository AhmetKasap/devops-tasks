<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
</head>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
<style>
  
    .menu-text-color2 {
        color : black ;
    }
    
    .paragraph{
        font-family: charter, Georgia, Cambria, "Times New Roman", Times, serif;    
        font-size: 18px;
        line-height: 175%;
        word-spacing: 3px;
        color: black;
    }
    
    .paragraph2{
        font-family: charter, Georgia, Cambria, "Times New Roman", Times, serif;    
        font-size: 16px;
        line-height: 155%;
        word-spacing: 3px;
    }
    
    .title{
        font-family: fell, Georgia, Cambria, "Times New Roman", Times, serif;    
    }
    
    </style>
<body>
    
    <%- include ('layouts/navbar'); %>





    <div class="row g-0">
        <div class="col-xl-2 col-md-2 col-sm-12 ">
            <ul class="list-group list-group-flush">
                <li class="list-group-item "> <a href="" class="text-decoration-none menu-text-color2">
                    <% if (typeof blogs !== 'undefined') { %>
                        <% blogs.forEach(data => { %>
                            <% if (data.categoryName == category) { %>
                                <li class="list-group-item list-group-flush paragraph2"> <a href="/categories/<%= category %>/<%= data._id %>?_method=GET" class="text-decoration-none text-dark"><%= data.title %></a> </li>
                            <% } %>
                        <% }) %>
                    <% } %>
                </a></li>
               
            </ul>
        </div>
        <div class="col-xl-8 col-md-7 col-sm-12 mx-auto ">
            <div class=" w-75 mx-auto">
                
                <% if (typeof blogs !== 'undefined') {
                    blogs.map(blog => {
                        if (blog._id.toString() === detailsId) { %>
                            <h1 class="mt-5 mb-3 text-center"> <%= blog.title %> </h1>
                            <p class="paragraph"> <%- blog.text %> </p>
                            <hr class="mt-5">
                        <% }
                    });
                } %>
                
                


                
                
              
               


                
                
                
                
            </div>
        </div>
        <div class="col-xl-2 col-md-2 col-sm-12 "></div>
    </div>

    <%- include ('layouts/footer') %>

    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
</body>
</html>