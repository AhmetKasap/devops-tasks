<%- include ('../partials/header'); %>

<%- include ('../layouts/navbar'); %>



<div class="w-75 mx-auto">
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col" class="fw-bold">Blog Title</th>
            <th scope="col" class="fw-bold">Short Text</th> 
            <th scope="col" class="fw-bold">Text</th>
            <th scope="col" class="fw-bold">Categorie</th>
            <th scope="col" class="fw-bold">Sil</th>
          </tr>
        </thead>
        <tbody>
            <% blogs.map(data => { %>
                <tr>
                    <th scope="row">1</th>
                    <td><%= data.title %></td>
                    <td><%= data.shortText %></td>
                    <td>data.text çok uzun, çağırmadım</td>
                    <td><%= data.categoryName %></td>
                    <td>
                        



                        <a href="/deleteBlog/<%= data._id %>?_method=DELETE" class="text-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
